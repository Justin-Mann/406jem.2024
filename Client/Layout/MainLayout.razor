@inherits LayoutComponentBase
<div class="page">
    <main>
        <div class="top-row px-4">
            <div class="top-menu">
                <a href="/" class="@GetActive("*")">Home</a>
                <a href="/resume" class="@GetActive("resume")">Digital Resume</a>
                <a href="/projects" class="@GetActive("projects")">Current Project</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code {

    [Inject]
    NavigationManager NavigationManager { get; set; }

    protected override void OnInitialized() => NavigationManager.LocationChanged += (s, e) => StateHasChanged();

    bool IsActive(string href, NavLinkMatch navLinkMatch = NavLinkMatch.Prefix)
    {
        if (href == "*" && NavigationManager.ToBaseRelativePath(NavigationManager.Uri).Length == 0)
            return true;
        var relativePath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri).ToLower();
        return navLinkMatch == NavLinkMatch.All ? relativePath == href.ToLower() : relativePath.StartsWith(href.ToLower());
    }

    string GetActive(string href, NavLinkMatch navLinkMatch = NavLinkMatch.Prefix) => IsActive(href, navLinkMatch) ? "active" : "";
}
